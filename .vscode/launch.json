{
  "version": "0.2.0",
  "configurations": [

    {
      "name": "Python Backend (Debug)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/backend_py/server.py",
      "args": [
        "--config", "${workspaceFolder}/var",
        "--udp-ip", "Gleisbox",
        "--host", "0.0.0.0",
        "--port", "6020",
        "--www", "${workspaceFolder}/src/frontend"
      ],
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "FLASK_ENV": "development",
        "PYTHONUNBUFFERED": "1"
      },
      "cwd": "${workspaceFolder}"
    },

    // MSVC x64
    {
      "name": "C++ Backend Debug (MSVC)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/src/backend_cpp/build-msvc/Debug/mswebapp_cpp.exe",
      "args": [
        "--config", "${workspaceFolder}/var",
        "--udp-ip", "Gleisbox",
        "--host", "0.0.0.0",
        "--port", "6020",
        "--www", "${workspaceFolder}/src/frontend"
      ],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "externalConsole": false,
      "preLaunchTask": "C++ backend: Build Debug (MSVC)",
      "MIMode": "lldb"
    },
    {
      "name": "C++ Backend Release (MSVC)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/src/backend_cpp/build-msvc/Release/mswebapp_cpp.exe",
      "args": [
        "--config", "${workspaceFolder}/var",
        "--udp-ip", "Gleisbox",
        "--host", "0.0.0.0",
        "--port", "6020",
        "--www", "${workspaceFolder}/src/frontend"
      ],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "externalConsole": false,
      "preLaunchTask": "C++ backend: Build Release (MSVC)",
      "MIMode": "lldb"
    },

    // MSVC ARM64
    {
      "name": "C++ Backend Debug (MSVC ARM64)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/src/backend_cpp/build-msvc-arm64/Debug/mswebapp_cpp.exe",
      "args": [
        "--config", "${workspaceFolder}/var",
        "--udp-ip", "Gleisbox",
        "--host", "0.0.0.0",
        "--port", "6020",
        "--www", "${workspaceFolder}/src/frontend",
        "--bind"
      ],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "externalConsole": false,
      "preLaunchTask": "C++ backend: Build Debug (MSVC ARM64)",
      "MIMode": "lldb"
    },
    {
      "name": "C++ Backend Release (MSVC ARM64)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/src/backend_cpp/build-msvc-arm64/Release/mswebapp_cpp.exe",
      "args": [
        "--config", "${workspaceFolder}/var",
        "--udp-ip", "Gleisbox",
        "--host", "0.0.0.0",
        "--port", "6020",
        "--www", "${workspaceFolder}/src/frontend",
        "--bind"
      ],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "externalConsole": false,
      "preLaunchTask": "C++ backend: Build Release (MSVC ARM64)",
      "MIMode": "lldb"
    },

  // macOS
