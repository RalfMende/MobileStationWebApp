{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "C++ backend: Configure (MSVC)",
			"type": "shell",
			"command": "cmake",
			"args": [
				"-S",
				"${workspaceFolder}/src/backend_cpp",
				"-B",
				"${workspaceFolder}/src/backend_cpp/build-msvc",
				"-G",
				"Visual Studio 17 2022",
				"-A",
				"x64"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": []
		},
